<%- include("inc/header") -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Tela Inicial
        </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home" style="color: #444"></i> Home</a></li>
          <li class="active">Dashboard</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="row">
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/revisions'" style="cursor:pointer">
              <span class="info-box-icon bg-red">
                <i class="ion ion-ios-calendar"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Revisões</span>
                <span class="info-box-number"><%= data.nrrevisions%></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/lessons'" style="cursor:pointer">
              <span class="info-box-icon bg-blue">
                <i class="ion ion-ios-compose"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Lições</span>
                <span class="info-box-number"><%= data.nrlessons %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <!-- fix for small devices only -->
          <div class="clearfix visible-sm-block"></div>

          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/flashcards'" style="cursor:pointer">
              <span class="info-box-icon bg-yellow">
                <i class="ion ion-ios-photos"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Flashcards</span>
                <span class="info-box-number"><%= data.nrflashcards %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box" onclick="window.location.href = '/admin/category'" style="cursor:pointer">
              <span class="info-box-icon bg-green">
                <i class="ion ion-ios-bookmarks-outline"></i>
              </span>

              <div class="info-box-content">
                <span class="info-box-text">Categorias</span>
                <span class="info-box-number"><%= data.nrcategories %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>

        <div class="row">
          <div class="col-md-12 col-sm-6 col-xs-12">
            <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Navegadores suportados</h3>
      
                <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i></button>
                  <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                    <i class="fa fa-times"></i></button>
                </div>
              </div>
              <div class="box-body">
                Para uma melhor experiência, utilize os seguintes navegadores:<br>
                 <div class="row">
                    <div class="col-sm-4" style="text-align: center;">
                      <br>
                      <p><i class="fa fa-chrome" style="font-size: 50px;"></i></p>
                      <p>Chrome (versão 33 ou superior)</p>
                    </div>
                    <div class="col-sm-4" style="text-align: center;">
                      <br>
                      <p><i class="fa fa-firefox" style="font-size: 50px;"></i></p>
                      <p>Firefox (versão 49 ou superior)</p>
                    </div>
                    <div class="col-sm-4" style="text-align: center;">
                      <br>
                      <p><i class="fa fa-safari" style="font-size: 50px;"></i></p>
                      <p>Safari (versão 7 ou superior)</p>
                    </div>
                 </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
              </div>
              <!-- /.box-footer-->
            </div>
          </div>
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

<%- include("inc/footer") -%>